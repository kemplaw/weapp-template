.button-group-wrapper {
  display: flex;
  margin-top: 40rpx;
}

.button-wrapper {
  flex: 1;
  width: 100%;
}

.button-wrapper+.button-wrapper {
  margin-left: 30rpx;
}

.bg-wrapper {
  width: 100%;
  height: 280rpx;
  background-color: red;
  overflow: hidden;
}

.bg {
  width: 100%;
  height: 100%;
}

.info-wrapper {
  padding: 0 40rpx 40rpx;
  text-align: center;
}

.info .title {
  line-height: 48rpx;
  margin: 40rpx 0 16rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.info .content {
  display: inline-flex;
  font-size: 24rpx;
}